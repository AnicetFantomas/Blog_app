<section class="container">
    <p class="post-title">Add New Post :</p>
    <%= form_with model: @post, url: user_posts_path, method: :post, local: true, class: "form-control" do |form| %>

        <%= form.hidden_field :comments_counter, value: 0 %>
        <%= form.hidden_field :likes_counter, value: 0 %>

        <div class="mb-3 mt-3">
            <%= form.label :title %>
            <%= form.text_field :title, placeholder: "Title", required: true, class: "form-post-title" %>
        </div>

        <div>
            <%= form.label :text %>
            <%= form.text_area :text, placeholder: "Type your post here!", rows: 20, required: true,  class: "form-post-text" %>
        </div>

        <div>
            <%= form.submit "Save", class: "button" %>
        </div>
    <% end %>
</section>